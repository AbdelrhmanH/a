<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:alpha="0.90" android:state_checked="true">
        <shape >
            <corners android:radius="5dp"/>
            <solid android:color="@color/LightSlateGray"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
            <stroke android:color="@color/LightSlateGray" android:width="1dp"/>
        </shape>
    </item>

    <item android:alpha="0.60" android:state_checked="false">
        <shape >
            <corners android:radius="5dp"/>
            <solid android:color="#EAEAEA"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
            <stroke android:color="@color/LightSlateGray" android:width="1dp"/>
        </shape>
    </item>

</selector>